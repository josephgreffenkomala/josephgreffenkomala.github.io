---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Foot from '../components/Foot.astro';
import ContactForm from '../components/ContactForm.astro';
import "../styles/global.css";
---

<Layout>
    <Navbar />
    
    <div class="max-w-4xl mx-auto px-4 py-12">
        <div class="bg-third rounded-4xl p-10 border-2 shadow-sm m-10">
            <h1 class="text-4xl font-bold mb-8 font-itim text-center">Contact Me</h1>
            
            <div class="grid md:grid-cols-2 gap-8">
                <!-- Contact Information -->
                <div class="space-y-6">
                    <h2 class="text-2xl font-bold font-itim mb-4 text-second">Get In Touch</h2>
                    <p class="text-sixth mb-6 font-itim">
                        I'm always open to discussing new opportunities, collaborations, or just having a chat about technology and data science. Feel free to reach out!
                    </p>
                    
                    <div class="space-y-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 bg-fourth rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-itim font-semibold text-sixth">Email</p>
                                <a href="mailto:josephgreffenkomala@mail.ugm.ac.id" class="text-fourth hover:underline font-itim">josephgreffenkomala@mail.ugm.ac.id</a>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 bg-fifth rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-itim font-semibold text-sixth">LinkedIn</p>
                                <a href="https://www.linkedin.com/in/joseph-greffen-komala-ab1848293/" target="_blank" class="text-fifth hover:underline font-itim">linkedin.com/in/joseph-greffen-komala-ab1848293</a>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 bg-sixth rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-itim font-semibold text-sixth">GitHub</p>
                                <a href="https://github.com/josephgreffenkomala" target="_blank" class="text-sixth hover:underline font-itim">github.com/josephgreffenkomala</a>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                            <div class="w-8 h-8 bg-second rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-itim font-semibold text-sixth">Location</p>
                                <p class="text-second font-itim">Yogyakarta, Indonesia</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- CV Download Section -->
                    <div class="mt-8 p-6 bg-fourth-light rounded-2xl border-2 border-fourth">
                        <h3 class="text-xl font-bold font-itim mb-4 text-fourth-dark">Download My CV</h3>
                        <p class="text-fourth-dark mb-4 font-itim">
                            Get a detailed overview of my experience, skills, and achievements.
                        </p>
                        <a 
                            href="/cv.pdf" 
                            download="Joseph_CV.pdf"
                            class="inline-flex items-center space-x-2 bg-fourth hover:bg-fourth-dark text-white font-itim font-semibold py-3 px-6 rounded-xl transition-colors duration-300 shadow-sm border-2 border-black"
                        >
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414L10 14.414l-3.707-3.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Download CV</span>
                        </a>
                    </div>
                </div>
                
                <!-- Contact Form -->
                <ContactForm />
            </div>
        </div>
    </div>
    
    <Foot />
</Layout>

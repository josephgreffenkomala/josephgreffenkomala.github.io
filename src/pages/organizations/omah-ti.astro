---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Foot from '../../components/Foot.astro';

const achievements = [
  "Provided academic tutoring for computer science subjects during the 2024 Even Semester Final Exams, supporting over 100 students in understanding foundational concepts.",
  "Ensured the smooth execution of Front-End Development and Mobile App Development training sessions over a period of 11 months.",
  "Actively attended technical trainings and completed assignments related to data science and machine learning.",
  "Worked on major projects involving Natural Language Processing (NLP) and Recommendation Systems, applying theoretical knowledge to practical problem-solving."
];

const relatedEvents = [
  {
    title: "Omah TI Learning Center",
    period: "Sep 2024 - Nov 2024",
    position: "Event Coordinator",
    description: "An external public training initiative by OmahTI, consisting of four open-access learning classes.",
    achievements: [
      "Coordinated division members and maintained workflow efficiency.",
      "Ensured the smooth execution of all events through timeline management and task delegation.",
      "Collaborated with other divisions to align operational, technical, and promotional aspects.",
      "Assisted the sponsorship division and successfully helped secure 4 sponsors, including Telkomsigma, Gameloft, Sysbraykr, and another company.",
      "Recruited 4 expert mentors and 2 professional speakers, tailored to the theme of each class.",
      "Recruited 8 teaching assistants (2 per class) to ensure effective class facilitation and participant support."
    ]
  },
  {
    title: "OEM OEM 2024",
    period: "Aug 2024 - Sep 2024",
    position: "Staff of Event Division",
    description: "Introductory training event for new students of Computer Science UGM, focusing on various subfields within the discipline",
    achievements: [
      "Coordinated and established the event flow, ensuring smooth execution and time management throughout the sessions.",
      "Acted as Master of Ceremony (MC) during Data Science and Competitive Programming training sessions.",
      "Assisted in preparation and setup of training materials and class logistics."
    ]
  }
];
---

<Layout title="Omah TI - Organization Details">
  <Navbar />
  
  <div class="min-h-screen bg-base">
    <div class="container mx-auto px-4 py-8">
      <!-- Back Button -->
      <div class="mb-8">
        <a href="/" class="inline-flex items-center text-fourth hover:text-fourth-dark transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Portfolio
        </a>
      </div>

      <!-- Organization Header -->
      <div class="bg-fourth rounded-4xl p-8 mb-8 border-2 shadow-sm">
        <h1 class="text-4xl font-bold text-white mb-4 font-itim">Omah TI</h1>
        <p class="text-white/90 text-lg font-lusitana">A student-led tech community focused on skill development and applied learning in computer science.</p>
        <div class="mt-4">
          <span class="bg-white text-fourth px-4 py-2 rounded-full text-sm font-medium">Feb 2024 - Dec 2024</span>
          <span class="bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium ml-2">Data Science and AI Staff & Skill Development Staff</span>
        </div>
      </div>

      <!-- Achievements -->
      <div class="bg-white rounded-4xl p-6 border-2 shadow-sm mb-8">
        <h2 class="text-3xl font-bold font-itim text-center mb-8">Key Achievements</h2>
        
        <div class="space-y-4">
          {achievements.map((achievement) => (
            <div class="flex items-start gap-4 p-4 bg-fourth/10 rounded-2xl">
              <div class="bg-fourth rounded-full p-2 mt-1">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed font-lusitana">{achievement}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Related Events -->
      <div class="space-y-6">
        <h2 class="text-3xl font-bold font-itim text-center mb-8">Related Event Committee Experiences</h2>
        
        {relatedEvents.map((event) => (
          <div class="bg-white rounded-4xl p-6 border-2 shadow-sm hover:shadow-md transition-all duration-300">
            <div class="flex justify-between items-start mb-4 flex-wrap gap-2">
              <h3 class="text-2xl font-bold font-itim text-gray-800">{event.title}</h3>
              <span class="bg-fourth text-white px-3 py-1 rounded-full text-sm font-medium">{event.period}</span>
            </div>
            
            <h4 class="text-lg font-bold text-fourth mb-2 font-lusitana">{event.position}</h4>
            <p class="text-gray-600 mb-4 font-lusitana italic">{event.description}</p>
            
            <div class="space-y-2">
              <ul class="list-disc list-inside space-y-2 text-fourth">
                {event.achievements.map((achievement) => (
                  <li class="text-gray-700 text-sm leading-relaxed font-lusitana">{achievement}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  
  <Foot />
</Layout>

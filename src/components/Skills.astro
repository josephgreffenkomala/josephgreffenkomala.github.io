---
import "../styles/global.css";

const hardSkills = [
    { name: "Python", color: "first" },
    { name: "JavaScript", color: "fifth" },
    { name: "SQL", color: "first" },
    { name: "Machine Learning", color: "fifth" },
    { name: "Deep Learning", color: "first" },
    { name: "PyTorch", color: "sixth" },
    { name: "Scikit-learn", color: "second" },
    { name: "Pandas", color: "fifth" },
    { name: "NumPy", color: "first" },
    { name: "React", color: "fourth" },
    { name: "Next.js", color: "sixth" },
    { name: "Astro", color: "second" },
    { name: "Node.js", color: "fifth" },
    { name: "HTML/CSS", color: "first" },
    { name: "Tailwind CSS", color: "fourth" },
    { name: "Git", color: "sixth" },
    { name: "Docker", color: "second" },
    { name: "Data Visualization", color: "fifth" },
];

const softSkills = [
    { name: "Project Management", color: "fourth" },
    { name: "Problem Solving", color: "sixth" },
    { name: "Team Collaboration", color: "second" },
    { name: "Communication", color: "fifth" },
    { name: "Leadership", color: "first" },
    { name: "Time Management", color: "fourth" },
    { name: "Critical Thinking", color: "sixth" },
    { name: "Adaptability", color: "second" },
];
---

<div class="flex bg-third m-10 rounded-4xl p-10 border-2 shadow-lg relative overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute top-0 left-0 w-32 h-32 bg-first/10 rounded-full -translate-x-16 -translate-y-16"></div>
    <div class="absolute top-0 right-0 w-24 h-24 bg-fifth/10 rounded-full translate-x-12 -translate-y-12"></div>
    <div class="absolute bottom-0 left-1/4 w-20 h-20 bg-fourth/10 rounded-full translate-y-10"></div>
    <div class="absolute bottom-0 right-1/3 w-16 h-16 bg-sixth/10 rounded-full translate-y-8"></div>
    
    <div class="w-full relative z-10">
        <!-- Skills Header -->
        <div class="text-center mb-2">
            <p class="text-4xl font-bold font-itim text-gray-800 mb-2">
                <!-- <span class="text-first font-bold text-5xl">|</span>  -->
                <span class="">Skills</span> 
                <!-- <span class="text-first font-bold text-5xl">|</span> -->
            </p>
            <p class="text-gray-600 font-itim">
                Technologies and capabilities I've developed
            </p>
        </div>
        
        <!-- Hard Skills Section -->
        <div class="mb-6">
            <div class="flex items-center justify-center mb-4">
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-first to-transparent"></div>
                <p class="text-lg font-bold mx-4 font-itim text-center text-first bg-white/80 px-3 py-1 rounded-full shadow-md border border-first/20">
                     Hard Skills
                </p>
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-first to-transparent"></div>
            </div>
            <div class="text-center">
                <div class="flex flex-wrap justify-center gap-2 max-w-5xl mx-auto">
                    {hardSkills.map((skill) => (
                        <span class={`bg-white/95 text-${skill.color} px-4 py-2 rounded-full font-itim font-bold text-sm shadow-md border border-${skill.color}/30 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-default`}>
                            {skill.name}
                        </span>
                    ))}
                </div>
            </div>
        </div>

        <!-- Soft Skills Section -->
        <div>
            <div class="flex items-center justify-center mb-4">
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-fifth to-transparent"></div>
                <p class="text-lg font-bold mx-4 font-itim text-center text-fifth bg-white/80 px-3 py-1 rounded-full shadow-md border border-fifth/20">
                     Soft Skills
                </p>
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-fifth to-transparent"></div>
            </div>
            <div class="text-center">
                <div class="flex flex-wrap justify-center gap-2 max-w-5xl mx-auto">
                    {softSkills.map((skill) => (
                        <span class={`bg-white/95 text-${skill.color} px-4 py-2 rounded-full font-itim font-bold text-sm shadow-md border border-${skill.color}/30 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-default`}>
                            {skill.name}
                        </span>
                    ))}
                </div>
            </div>
        </div>
    </div>
</div>
